---
interface Props {
	title: string;
    desc: string;
	body: string;

}

const {title,desc, body } = Astro.props;
---
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Arvo">
<style>
	
html {
		font-family: Roboto Mono,ui-monospace,SFMono-Regular,Menlo,Monaco,Consolas,Liberation Mono,Courier New,monospace;
		
	}
	.h{
		font-family: Arvo,ui-serif,Georgia,Cambria,Times New Roman,Times,serif;
		font-size:3rem;
		font-weight: 700;
		margin-top: 0;
	}
	
	.description{
color:#A1A1AA;
font-size: .875rem;
    line-height: 1.25rem;
	padding-top: 1.25rem;
	
	}
	p
	{
		font-size:17px;
		color:#3F3F46;
		margin-top: 30px;
    margin-bottom: 20px;
    line-height: 1.7em;
    letter-spacing: -.9px;
	}
	.content{
		padding: 24px;
		margin:0 5rem;
	}	
</style>
<div class="content">
    <h1 class="h">{title}</h1>
<p class="description">{desc}</p>
<p> {body} </p>
</div>


