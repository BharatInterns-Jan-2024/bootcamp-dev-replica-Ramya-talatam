---
interface Props {
	title: string;
    desc: string;
	body: string;

}

const {title,desc, body } = Astro.props;
---
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Arvo">
<style>
	

	
	p
	{
		font-size:17px;
		color:#3F3F46;
		margin-top: 30px;
    margin-bottom: 20px;
    line-height: 1.7em;
    letter-spacing: -.9px;
	}
	
</style>
<div >
    <h1 class="h">{title}</h1>
<p class="description">{desc}</p>
<p> {body} </p>
</div>


