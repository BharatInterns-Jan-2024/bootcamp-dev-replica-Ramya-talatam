---
import Layout from '../layouts/Layout.astro';
import Content from '../components/try.astro';
import Menu from '../components/internet.astro';
let posts = await Astro.glob('./port.md');
let post = posts[0];
---
<Layout title="Valley of Code">
	<main>
		<Menu />
        <div class="content">
		<Content title="The Internet: What is a port" body="" />
        <post.Content />
	</div>
	</main>
    <script>
        const urlitem = document.getElementById('port-item');
            urlitem.classList.add('active');
    </script>
</Layout>



