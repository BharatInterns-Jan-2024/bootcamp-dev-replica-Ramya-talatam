---
interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		
	</body>
</html>
<style is:global>
	
	img
	{
		width: 90%;
		height: auto;
	}
	header
	{
		display: flex;
		gap:2rem;
	}
	header p
	{
		font-size:16px;
	}
	header img{
		width: 20px;
	}
	header a{
		text-decoration: none;
		color: #18181B;
		font-weight: 500;
	}
	.p0 img {
		border-radius:1.5rem;
	}
	.p0
	{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
		max-width: 56rem;
	
	}
	.p0 p>img
	{
		max-width: 36rem;
	}
	footer
	{
		font-size: 20px;
	}
	footer a{
		color: #18181B;
	}
</style>
