---
interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		
	</body>
</html>
<style is:global>
	
	img
	{
		width: 90%;
		height: auto;
	}
	header
	{
		display: flex;
		gap:2rem;
	}
	header p
	{
		font-size:16px;
	}
	header img{
		width: 20px;
	}
	header a{
		text-decoration: none;
		color: #18181B;
		font-weight: 500;
	}
	.p0 img {
		border-radius:1.5rem;
	}
	.p0
	{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
		max-width: 56rem;
	
	}
	.p0 p>img
	{
		max-width: 70rem;
	}
	.p2 p>img{
		max-width: 50%;
	
	}
	footer
	{
		font-size: 20px;
	}
	footer a{
		color: #18181B;
	}
	@media(prefers-color-scheme: dark)
	{
		body
		{
			filter: invert(100%);
			background-color: rgb(29, 32,31)!important;
		}
		
		.p2
		{
			filter: invert(100%);
		}
	}
	@media (max-width: 600px) {
	.p0>p img
	{
    width: 100%;
	scale: 1.4;
	clip-path: inset(0 15% 0 15% round 1.5rem);
	}
        }
</style>
